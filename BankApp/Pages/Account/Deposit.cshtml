@page
@model BankApp.Pages.DepositModel
@{
}

<h1 class="margin-class">Deposit</h1>

<form method="post">
    <dt class="col-sm-4 primary-color">Balance:</dt>
    <dd class="col-sm-8 primary-color">@Model.TotalBalance $</dd>
    <hr />
    <div class="flex-item">
        <h5 class="header-quote">Choose account:</h5>
        <select class="small-margin" asp-for="AccountId">
            @foreach (var acc in Model.Accounts)
            {
                <option value="@acc.AccountId">@acc.AccountId</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label class="primary-color deposit-input" asp-for="DepositAmount">Amount</label>
        <input asp-for="DepositAmount" />
        <span asp-validation-for="DepositAmount" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="primary-color deposit-input" asp-for="Comment">Comment</label>
        <input asp-for="Comment" />
        <span asp-validation-for="Comment" class="text-danger"></span>
    </div>
    <a class="custom-btn custom-border-btn btn mt-5" onclick="window.history.back()">Back</a>
    <input class="custom-btn custom-border-btn btn mt-5" type="submit" value="Deposit" />
</form>

<div id="depositSuccessModal" class="modal">
    <div class="modal-content">
        <span class="close">&times;</span>
        <p>Deposit is successful</p>
    </div>
</div>
