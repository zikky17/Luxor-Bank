@page
@model WithdrawModel
@{

}

@if (TempData["Message"] != null)
{
    <div class="alert alert-warning delete-message text-center" id="delete-message">
        @TempData["Message"]
    </div>
}

<h1 class="margin-class">Withdraw</h1>
<hr class="primary-color" />
<form method="post">
    <dd class="col-sm-4 mt-2 primary-color">Balance: <span class="small-margin green-color-text">@Model.AccountBalance SEK</span></dd>
    <hr class="primary-color" />
    <div class="flex-item">
        <h4 class="header-quote">Account:</h4>
        <h6 class="primary-color margin-left-20 mt-1">@Model.AccountId</h6>
    </div>
    <div class="form-group">
        <label class="primary-color input-style-account" asp-for="WithdrawAmount">Amount</label>
        <input asp-for="WithdrawAmount" />
        <div class="validation-container">
            <span asp-validation-for="WithdrawAmount" class="text-danger"></span>
        </div>
    </div>
   
    <a class="custom-btn custom-border-btn btn back-button-mobile mt-5"
       asp-page="/Account/Index"
       asp-route-customerId="@Model.CustomerId"
       asp-route-accountId="@Model.AccountId"
       asp-route-firstName="@Model.FirstName"
       asp-route-lastName="@Model.LastName">
        Back
        <i class="fa-light fa-arrow-turn-down-left"></i>
    </a>
    <button class="custom-btn custom-border-btn btn mt-5 button-margin" type="submit">
        Withdraw <i class="fa-light fa-money-simple-from-bracket"></i>
    </button>
</form>

<script>
    $(document).ready(function () {
        $("#delete-message").delay(3000).fadeOut(1000);
    });
</script>

<partial name="Shared/_ValidationScriptsPartial" />