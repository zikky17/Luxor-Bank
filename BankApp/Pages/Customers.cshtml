@page
@model BankApp.Pages.CustomersModel
@{
}

<div class="margin-classs">


    <h1>All Customers</h1>
    <h3>Page @Model.CurrentPage of @Model.TotalPages</h3>

    <form method="get">
        <input asp-for="@Model.Q" />
        <input type="hidden" asp-for="@Model.CustomerId" />
        <input class="custom-btn custom-border-btn btn" type="submit" value="Search" />
    </form>


    <table class="table customers-table">
        <thead>
            <tr>
                <th class="index-headers-text" scope="col">
                    Id
                    <a asp-page="/Customers"
                       asp-route-q="@Model.Q"
                       asp-route-sortColumn="Id"
                       asp-route-sortOrder="asc"
                       style="text-decoration:none">
                        <i class="fa-solid fa-angle-up green-color"></i>

                    </a>
                    <a asp-page="/Customers"
                       asp-route-q="@Model.Q"
                       asp-route-sortColumn="Id"
                       asp-route-sortOrder="desc"
                       style="text-decoration:none">
                        <i class="fa-solid fa-angle-down green-color"></i>
                    </a>
                </th>
                <th class="index-headers-text" scope="col">
                    First Name
                    <a asp-page="/Customers"
                       asp-route-q="@Model.Q"
                       asp-route-sortColumn="FirstName"
                       asp-route-sortOrder="asc"
                       style="text-decoration:none">
                        <i class="fa-solid fa-angle-up green-color"></i>

                    </a>
                    <a asp-page="/Customers"
                       asp-route-q="@Model.Q"
                       asp-route-sortColumn="FirstName"
                       asp-route-sortOrder="desc"
                       style="text-decoration:none">
                        <i class="fa-solid fa-angle-down green-color"></i>
                    </a>
                </th>

                <th class="index-headers-text" scope="col">
                    Last Name
                    <a asp-page="/Customers"
                       asp-route-q="@Model.Q"
                       asp-route-sortColumn="LastName"
                       asp-route-sortOrder="asc"
                       style="text-decoration:none">
                        <i class="fa-solid fa-angle-up green-color"></i>

                    </a>
                    <a asp-page="/Customers"
                       asp-route-q="@Model.Q"
                       asp-route-sortColumn="LastName"
                       asp-route-sortOrder="desc"
                       style="text-decoration:none">
                        <i class="fa-solid fa-angle-down green-color"></i>
                    </a>
                </th>

                <th class="index-headers-text" scope="col">
                    City
                    <a asp-page="/Customers"
                       asp-route-q="@Model.Q"
                       asp-route-sortColumn="City"
                       asp-route-sortOrder="asc"
                       style="text-decoration:none">
                        <i class="fa-solid fa-angle-up green-color"></i>

                    </a>
                    <a asp-page="/Customers"
                       asp-route-q="@Model.Q"
                       asp-route-sortColumn="City"
                       asp-route-sortOrder="desc"
                       style="text-decoration:none">
                        <i class="fa-solid fa-angle-down green-color"></i>
                    </a>
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>

            @foreach (var supp in Model.Customers)
            {
                <tr class="primary-color">
                    <td>@supp.CustomerId</td>
                    <td>@supp.FirstName</td>
                    <td>@supp.LastName</td>
                    <td>@supp.City</td>
                    <td><a asp-page="/Customer" asp-route-customerId="@supp.CustomerId" class="custom-btn custom-border-btn">View</a></td>
                </tr>
            }
        <td>
                @if (Model.CurrentPage != 1)
                {

                <a asp-page="/Customers"
                   asp-route-sortColumn="@Model.SortColumn"
                   asp-route-customerId="@Model.CustomerId"
                   asp-route-sortOrder="@Model.SortOrder"
                   asp-route-pageNumber="@(Model.CurrentPage-1)"
                   class="custom-btn custom-border-btn btn pagination-button">Previous</a>

                }
        </td>
        <td></td>
        <td></td>
        <td></td>
        <td>
                @if (Model.CurrentPage < Model.TotalPages)
                {
                <a asp-page="/Customers"
                   asp-route-sortColumn="@Model.SortColumn"
                   asp-route-customerId="@Model.CustomerId"
                   asp-route-sortOrder="@Model.SortOrder"
                   asp-route-pageNumber="@(Model.CurrentPage+1)"
                   class="custom-btn custom-border-btn btn pagination-button">Next</a>
                }
        </td>

        </tbody>
    </table>

</div>