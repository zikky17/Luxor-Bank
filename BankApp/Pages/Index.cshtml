@page
@using BankWeb.Pages
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<h1 class="margin-class" style="text-align:center">Banking made easy</h1>
<hr class="primary-color" />


<div class="margin-container">
    <table class="table custom-table index-table-margin">
        <tr class="index-headers-text">
            <td>Country</td>
            <td>Customers</td>
            <td>Accounts</td>
            <td>Total Balance</td>
            <td>View Country</td>
        </tr>
        @foreach (var country in Model.CustomersPerCountry)
        {
            <div>
            <tr class="fade-in">
                <td>@country.Key</td>
                <td>@country.Value</td>
                <td>@(Model.AccountsPerCountry.ContainsKey(country.Key) ? Model.AccountsPerCountry[country.Key] : 0)</td>
                <td>@(Model.BalancePerCountry.ContainsKey(country.Key) ? Model.BalancePerCountry[country.Key] : 0)</td>
                <td>
                    <a class="custom-btn custom-border-btn" asp-page="/Country" asp-route-country="@country.Key">
                        View
                        <i class="bi bi-eye ml-1"></i>
                        </a>
                </td>
            </tr>
    </div>
        }
    </table>
</div>

